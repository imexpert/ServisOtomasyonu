<!-- Modal-->
<div class="modal fade" id="modalYeniAdres" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Adres İşlemleri</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--begin::Form-->
                            <form class="form" id="avr_musteri_adres_form">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <div class="col-lg-4">
                                            <label>Şehir:</label>
                                            <Dropdown url="sehir/getirsehir"
                                                      text-field="sehirAdi"
                                                      name="SehirId"
                                                      child-name="IlceId"
                                                      param-name="sehirId"
                                                      value-field="id"></Dropdown>
                                        </div>
                                        <div class="col-lg-4">
                                            <label>İlçe:</label>
                                            <Dropdown url="ilce/getirilce"
                                                      text-field="ilceAdi"
                                                      child-name="SemtId"
                                                      param-name="ilceId"
                                                      name="IlceId"
                                                      value-field="id"></Dropdown>
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Semt:</label>
                                            <Dropdown url="semt/getirsemt"
                                                      text-field="aciklama"
                                                      name="SemtId"
                                                      value-field="id"></Dropdown>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-8">
                                            <label>Adres:</label>
                                            <input type="text" class="form-control" name="AcikAdres">
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Departman:</label>
                                            <input type="text" class="form-control" name="AdresDetay">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-3">
                                            <label>Cari Kod:</label>
                                            <input type="text" class="form-control" name="CariKod">
                                        </div>
                                        <div class="col-lg-3">
                                            <label>Görev Kodu:</label>
                                            <Parametre grup-kod="GorevKodlari" ana-grup-kod="0" name="YetkiliGörevKod"></Parametre>
                                        </div>
                                        <div class="col-lg-3">
                                            <label>Yetkili Kişi:</label>
                                            <input type="text" class="form-control" name="YetkiliAdSoyad">
                                        </div>
                                        <div class="col-lg-3">
                                            <label>Dahili:</label>
                                            <input type="text" class="form-control" name="YetkiliDahili">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-3">
                                            <label>E-Mail:</label>
                                            <input type="text" class="form-control ePostaMask" name="YetkiliEPosta">
                                        </div>
                                        <div class="col-lg-3">
                                            <label>Cep Telefonu:</label>
                                            <input type="text" class="form-control telMask" name="YetkiliCepTel">
                                        </div>
                                        <div class="col-lg-3">
                                            <label>İş Telefonu:</label>
                                            <input type="text" class="form-control telMask" name="YetkiliTel" id="txtYetkiliTel">
                                        </div>
                                        <div class="col-lg-3">
                                            <label>Faks:</label>
                                            <input type="text" class="form-control telMask" name="YetkiliFaks" id="txtYetkiliFaks">
                                        </div>
                                    </div>
                                </div>
                            </form>
